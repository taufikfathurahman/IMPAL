<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bigsaleFragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorRose"
    >

    <ImageView
        android:id="@+id/imageBigSale"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/bigsale" />

    <TextView
        android:id="@+id/titleBigSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/onboard1"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/fragmentColor" />

    <TextView
        android:id="@+id/descBigSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description1"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/lato_light"
        android:textSize="18sp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/slideOneNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            android:layout_weight="1"
            android:text="@string/next"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/lato_light"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>

</LinearLayout>