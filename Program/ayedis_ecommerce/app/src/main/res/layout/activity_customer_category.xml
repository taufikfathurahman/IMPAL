<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customerCategory">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/product_category" />


    <LinearLayout
        android:id="@+id/linear1_customer_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/c_clothes"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/hoodie"
            />

        <ImageView
            android:id="@+id/c_sport"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/basketball" />

        <ImageView
            android:id="@+id/c_bag"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/briefcase" />

        <ImageView
            android:id="@+id/c_beauty"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cosmetics" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1_customer_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_below="@+id/linear1_customer_category"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/clothes"
            android:gravity="center"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/sport"
            android:gravity="center"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/bag"
            android:gravity="center"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/beauty"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_customer_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_customer_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/c_computer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/laptop" />

        <ImageView
            android:id="@+id/c_shoes"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shoe" />

        <ImageView
            android:id="@+id/c_watch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/watch" />

        <ImageView
            android:id="@+id/c_phone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/smartphone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/linear2_customer_category"
        android:gravity="center"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="@string/computer"
            android:gravity="center"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/sport"
            android:gravity="center"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/watch"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:text="@string/phone"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>