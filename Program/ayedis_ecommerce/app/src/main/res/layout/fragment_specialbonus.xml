<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".specialbonusFragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/homebg">

    <ImageView
        android:id="@+id/imageBonus"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/bonus" />

    <TextView
        android:id="@+id/titleBonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="35sp"
        android:text="@string/onboard2"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/fragmentColor" />

    <TextView
        android:id="@+id/descBonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description2"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/lato_light"
        android:textSize="18sp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/slideTwoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:gravity="bottom|start"
            android:layout_weight="1"
            android:text="@string/back"
            android:textSize="20sp"
            android:textColor="@color/fragmentColor"
            android:fontFamily="@font/lato_light"
            android:clickable="true"
            android:focusable="true"
            />

        <TextView
            android:id="@+id/slideTwoNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            android:layout_weight="1"
            android:text="@string/next"
            android:textSize="20sp"
            android:textColor="@color/fragmentColor"
            android:fontFamily="@font/lato_light"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>

</LinearLayout>